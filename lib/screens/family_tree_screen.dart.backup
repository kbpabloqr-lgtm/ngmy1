  bool _isScrollingChart = false; // Track if user is manually scrolling
  
  // Market Sentiment Variables
  double _bullishPercentage = 62.0; // Dynamic percentage based on market movement
  final List<double> _recentPrices = []; // Track recent prices for sentiment calculation
  
  // Countdown Timer Variables
  Timer? _countdownTimer;
  int _remainingSeconds = 0; // Countdown remaining seconds
  bool _isTradeActive = false; // Track if any trades are active with countdown

  @override
  void initState() {
    super.initState();
