    _initializeMarketData();
    _startCandlestickTimer();
    _initializeTradingSignals();
    _startSignalUpdateTimer();
  }

  @override
  void dispose() {
    _rotationController.dispose();
    _pulseController.dispose();
    _marketTimer?.cancel();
    _candlestickTimer?.cancel();
    _countdownTimer?.cancel();
    _aiTradingTimer?.cancel();
    _signalUpdateTimer?.cancel();
