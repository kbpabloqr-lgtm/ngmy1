  // Market Chart Methods
  void _initializeMarketData() {
    // Initialize with realistic historical candlestick data
    final now = DateTime.now();
    _currentPrice = 155.0; // Start at a realistic forex price
    
    // Generate 20 historical candles for better chart visibility
    for (int i = 20; i >= 0; i--) {
      final timestamp = now.subtract(Duration(seconds: _selectedDuration * i));
      
      // More realistic price movements
      final volatility = 0.8; // Higher volatility for visible changes
      final trend = (Random().nextDouble() - 0.5) * 0.3; // Slight trend bias
      
      final open = _currentPrice + (Random().nextDouble() - 0.5) * volatility;
      final change = (Random().nextDouble() - 0.5) * volatility + trend;
      final close = open + change;
      
      // More realistic high/low calculation
      final maxMove = math.max(open, close) + Random().nextDouble() * 0.5;
      final minMove = math.min(open, close) - Random().nextDouble() * 0.5;
      
      final high = math.max(maxMove, math.max(open, close));
      final low = math.min(minMove, math.min(open, close));
      
      _candlestickData.add(CandlestickData(
        timestamp: timestamp,
        open: open.clamp(145.0, 165.0),
        high: high.clamp(145.0, 165.0),
        low: low.clamp(145.0, 165.0),
        close: close.clamp(145.0, 165.0),
      ));
      
      _currentPrice = close.clamp(145.0, 165.0);
    }
    
    // Start the current candle
    _startNewCandle();
  }
  
  void _startCandlestickTimer() {
    // Cancel existing timers
    _marketTimer?.cancel();
    _candlestickTimer?.cancel();
    
    // Dynamic update frequency based on selected duration
    // Faster updates for shorter durations, slower for longer durations
    int updateIntervalMs;
    switch (_selectedDuration) {
      case 15:  // 15 seconds - very fast updates (every 200ms)
        updateIntervalMs = 200;
        break;
      case 30:  // 30 seconds - fast updates (every 400ms)
        updateIntervalMs = 400;
        break;
      case 60:  // 1 minute - moderate updates (every 600ms)
        updateIntervalMs = 600;
        break;
      case 120: // 2 minutes - slower updates (every 800ms)
        updateIntervalMs = 800;
        break;
      case 300: // 5 minutes - slowest updates (every 1000ms)
        updateIntervalMs = 1000;
        break;
      default:
        updateIntervalMs = 500;
    }
    
    // Timer for updating current candle with realistic movement speed
    _marketTimer = Timer.periodic(Duration(milliseconds: updateIntervalMs), (timer) {
      _updateCurrentCandle();
    });
    
    // Timer for completing candles based on selected duration
    _candlestickTimer = Timer.periodic(Duration(seconds: _selectedDuration), (timer) {
      _completeCurrentCandle();
    });
  }
  
  void _startNewCandle() {
    _currentCandle = CandlestickData(
      timestamp: DateTime.now(),
      open: _currentPrice,
      high: _currentPrice,
      low: _currentPrice,
      close: _currentPrice,
    );
  }
  
  void _updateCurrentCandle() {
    setState(() {
      // Generate more realistic price movements
      final random = Random();
      final volatility = 0.15; // Realistic volatility
      final momentum = (random.nextDouble() - 0.5) * 0.05; // Small momentum effect
      
      // Price change with some momentum and mean reversion
      final change = (random.nextDouble() - 0.5) * volatility + momentum;
      final newPrice = _currentPrice + change;
      
      // Keep price in realistic range with soft boundaries
      _currentPrice = newPrice.clamp(145.0, 165.0);
      
      // Track recent prices for sentiment calculation
      _recentPrices.add(_currentPrice);
      if (_recentPrices.length > 10) {
        _recentPrices.removeAt(0);
      }
      
      // Calculate bullish percentage based on recent price trend
      if (_recentPrices.length >= 5) {
        final early = _recentPrices.take(5).reduce((a, b) => a + b) / 5;
        final recent = _recentPrices.skip(_recentPrices.length - 5).reduce((a, b) => a + b) / 5;
        final trend = ((recent - early) / early) * 100;
        
        // Convert trend to bullish percentage (50% neutral, trending up increases %)
        _bullishPercentage = (50 + (trend * 10)).clamp(15.0, 85.0);
      }
      
      // Update current candle with realistic high/low tracking
      _currentCandle = CandlestickData(
        timestamp: _currentCandle.timestamp,
        open: _currentCandle.open,
        high: math.max(_currentCandle.high, _currentPrice),
        low: math.min(_currentCandle.low, _currentPrice),
        close: _currentPrice,
      );
    });
  }
  
  void _completeCurrentCandle() {
    setState(() {
      // Add completed candle to the list
      _candlestickData.add(_currentCandle);
      
      // Keep only last 20 candles for performance
      if (_candlestickData.length > 20) {
        _candlestickData.removeAt(0);
      }
      
      // Start new candle
      _startNewCandle();
    });
  }
  
  // Trading Methods (Enhanced version is below)
  
  void _startCountdownTimer() {
    _countdownTimer?.cancel(); // Cancel any existing timer
    
    _countdownTimer = Timer.periodic(const Duration(seconds: 1), (timer) {
      setState(() {
        if (_activeTrades.isNotEmpty) {
          // Find the trade with the shortest remaining time
          final now = DateTime.now();
          final remainingTimes = _activeTrades.map((trade) {
            return trade.endTime.difference(now).inSeconds;
          }).toList();
          
          _remainingSeconds = remainingTimes.reduce((a, b) => a < b ? a : b);
          
          if (_remainingSeconds <= 0) {
            _isTradeActive = false;
            _countdownTimer?.cancel();
          }
        } else {
          _isTradeActive = false;
          _countdownTimer?.cancel();
        }
      });
    });
  }
  
  void _resolveTrade(String tradeId) {
    final tradeIndex = _activeTrades.indexWhere((t) => t.id == tradeId);
    if (tradeIndex == -1) return;
    
    final trade = _activeTrades[tradeIndex];
    final exitPrice = _currentPrice;
    trade.exitPrice = exitPrice;
    
    bool won = false;
    if (trade.type == 'up' && exitPrice > trade.entryPrice) {
      won = true;
    } else if (trade.type == 'down' && exitPrice < trade.entryPrice) {
      won = true;
    }
    
    trade.status = won ? 'won' : 'lost';
    
    setState(() {
      _activeTrades.removeAt(tradeIndex);
      _completedTrades.insert(0, trade);
      
      if (won) {
        _balance += trade.amount * 1.8; // 80% profit
      }
      
      // Update order history dot with result
      final dotIndex = _orderHistoryDots.indexWhere((dot) => 
        dot.timestamp == trade.startTime && dot.price == trade.entryPrice);
      if (dotIndex != -1) {
        _orderHistoryDots[dotIndex] = OrderHistoryDot(
          price: trade.entryPrice,
          timestamp: trade.startTime,
          type: trade.type,
          won: won,
          amount: trade.amount,
        );
      }
      
      // Keep only last 10 completed trades
      if (_completedTrades.length > 10) {
        _completedTrades.removeLast();
      }
      
      // Stop countdown if no more active trades
      if (_activeTrades.isEmpty) {
        _isTradeActive = false;
        _countdownTimer?.cancel();
      }
    });
    
    // Show result
    ScaffoldMessenger.of(context).showSnackBar(
      SnackBar(
        content: Text(
          won 
            ? 'ðŸŽ‰ WIN! +\$${(trade.amount * 0.8).toStringAsFixed(2)}' 
            : 'ðŸ’¸ LOSS! -\$${trade.amount.toStringAsFixed(2)}'
        ),
        backgroundColor: won ? Colors.green : Colors.red,
        duration: const Duration(seconds: 3),
      ),
    );
  }

  // Trading Signals Methods
  void _initializeTradingSignals() {
    _generateTradingSignals();
  }

  void _startSignalUpdateTimer() {
    _signalUpdateTimer = Timer.periodic(const Duration(minutes: 1), (timer) {
      _generateTradingSignals();
    });
  }

  void _generateTradingSignals() {
    setState(() {
      _tradingSignals.clear();
      final random = Random();
      final pairs = ['USD/EUR', 'GBP/USD', 'USD/JPY', 'AUD/USD', 'USD/CAD'];
      
      for (int i = 0; i < 4; i++) {
        final direction = random.nextBool() ? 'UP' : 'DOWN';
        final accuracy = '${85 + random.nextInt(10)}%'; // 85-94% accuracy
        final duration = _getRandomSignalDuration();
        
        _tradingSignals.add(TradingSignal(
          pair: pairs[random.nextInt(pairs.length)],
          direction: direction,
          accuracy: accuracy,
          expiry: DateTime.now().add(Duration(seconds: duration)),
          duration: duration,
          color: direction == 'UP' ? Colors.green : Colors.red,
        ));
      }
    });
  }

  int _getRandomSignalDuration() {
    final durations = [15, 30, 60, 120, 300]; // 15s, 30s, 1m, 2m, 5m
    return durations[Random().nextInt(durations.length)];
  }

  void _followSignal(TradingSignal signal) {
    // Set the trade duration to match the signal
    setState(() {
      _selectedDuration = signal.duration;
      _startCandlestickTimer(); // Restart timer with new duration
    });
    
    // Place the trade
    _placeTrade(signal.direction.toLowerCase());
    
    ScaffoldMessenger.of(context).showSnackBar(
      SnackBar(
        content: Text('?? Following ${signal.pair} signal: ${signal.direction} (${signal.accuracy} accuracy)'),
        backgroundColor: signal.color,
        duration: const Duration(seconds: 2),
      ),
    );
  }

  // AI Trading Methods
  void _toggleAITrading() {
    setState(() {
      _isAITradingActive = !_isAITradingActive;
    });
    
    if (_isAITradingActive) {
      _startAITrading();
      ScaffoldMessenger.of(context).showSnackBar(
        const SnackBar(
          content: Text('?? AI Trading Activated!'),
          backgroundColor: Colors.blue,
          duration: Duration(seconds: 2),
        ),
      );
    } else {
      _stopAITrading();
      ScaffoldMessenger.of(context).showSnackBar(
        const SnackBar(
          content: Text('?? AI Trading Stopped!'),
          backgroundColor: Colors.orange,
          duration: Duration(seconds: 2),
        ),
      );
    }
  }

  void _startAITrading() {
    _aiTradingTimer = Timer.periodic(const Duration(seconds: 15), (timer) {
      if (_isAITradingActive && _balance >= _tradeAmount) {
        // AI makes smart trades based on signals
        if (_tradingSignals.isNotEmpty) {
          final bestSignal = _tradingSignals.first; // Take the first signal
          _followSignal(bestSignal);
        } else {
          // Fallback to random if no signals
          final direction = Random().nextBool() ? 'up' : 'down';
          _placeTrade(direction);
        }
      }
    });
  }

  void _stopAITrading() {
    _aiTradingTimer?.cancel();
    _aiTradingTimer = null;
  }

  // Order History Methods
  void _addOrderHistoryDot(TradePosition trade) {
    _orderHistoryDots.add(OrderHistoryDot(
      price: trade.entryPrice,
      timestamp: trade.startTime,
      type: trade.type,
      won: trade.isWon,
      amount: trade.amount,
    ));
    
    // Keep only last 50 dots for performance
    if (_orderHistoryDots.length > 50) {
      _orderHistoryDots.removeAt(0);
    }
  }

  // Enhanced Trading Method with Multiple Orders Support
  void _placeTrade(String type) {
    if (_balance < _tradeAmount) return;
    if (_activeTrades.length >= 5) { // Limit to 5 concurrent trades
      ScaffoldMessenger.of(context).showSnackBar(
        const SnackBar(
          content: Text('?? Maximum 5 trades allowed at once!'),
          backgroundColor: Colors.orange,
        ),
      );
      return;
    }
    
    final tradeId = DateTime.now().millisecondsSinceEpoch.toString();
    final endTime = DateTime.now().add(Duration(seconds: _selectedDuration));
    
    final trade = TradePosition(
      id: tradeId,
      type: type,
      entryPrice: _currentPrice,
      startTime: DateTime.now(),
      endTime: endTime,
      amount: _tradeAmount,
    );
    
    setState(() {
      _activeTrades.add(trade);
      _balance -= _tradeAmount;
      
      // Add order history dot
      _addOrderHistoryDot(trade);
      
      // Start countdown timer if this is the first trade
      if (_activeTrades.length == 1) {
        _isTradeActive = true;
        _remainingSeconds = _selectedDuration;
        _startCountdownTimer();
      }
    });
    
    // Set timer to resolve trade
    Timer(Duration(seconds: _selectedDuration), () {
      _resolveTrade(tradeId);
    });
    
    ScaffoldMessenger.of(context).showSnackBar(
      SnackBar(
        content: Text('?? ${type.toUpperCase()} trade placed for \$${_tradeAmount.toStringAsFixed(0)}! (${_activeTrades.length}/5)'),
        backgroundColor: type == 'up' ? Colors.green : Colors.red,
        duration: const Duration(seconds: 2),
      ),
    );
  }

