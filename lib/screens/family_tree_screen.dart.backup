// Custom Painters
class ProfessionalCandlestickPainter extends CustomPainter {
  final List<CandlestickData> data;
  final double zoomScale;
  final List<TradePosition> activeTrades;
  final double currentPrice;
  final double chartOffset;
  final List<OrderHistoryDot> orderHistoryDots;
  
  ProfessionalCandlestickPainter(
    this.data, {
    this.zoomScale = 1.0, 
    this.activeTrades = const [], 
    this.currentPrice = 0.0, 
    this.chartOffset = 0.0,
    this.orderHistoryDots = const [],
  });

  @override
  void paint(Canvas canvas, Size size) {
    final paint = Paint()..strokeWidth = 2;
    
    if (data.isEmpty) return;
    
    // Calculate dynamic price range
    double minPrice = data.map((e) => e.low).reduce(math.min);
    double maxPrice = data.map((e) => e.high).reduce(math.max);
    final priceRange = maxPrice - minPrice;
    
    // Add padding to the range
    minPrice -= priceRange * 0.1;
    maxPrice += priceRange * 0.1;
    final paddedRange = maxPrice - minPrice;
    
    // Apply zoom to candle width
    final candleWidth = (size.width / data.length) * zoomScale;
    final visibleCandles = (size.width / candleWidth).floor();
    final startIndex = math.max(0, data.length - visibleCandles);
    
    for (int i = startIndex; i < data.length; i++) {
      final candle = data[i];
      final relativeIndex = i - startIndex;
      final x = relativeIndex * candleWidth + candleWidth / 2 + chartOffset;
      
      // Skip if outside visible area
      if (x < -candleWidth || x > size.width + candleWidth) continue;
      
      // Draw candlestick body
      final isUp = candle.close > candle.open;
      paint.color = isUp ? const Color(0xFF10B981) : const Color(0xFFEF4444); // Green for up, red for down
      
      // Convert prices to screen coordinates
      final bodyTop = size.height * (1 - (math.max(candle.open, candle.close) - minPrice) / paddedRange);
      final bodyBottom = size.height * (1 - (math.min(candle.open, candle.close) - minPrice) / paddedRange);
      
      // Make candle width responsive to zoom
      final bodyWidth = math.max(2.0, candleWidth / 4);
      
      canvas.drawRect(
        Rect.fromLTRB(x - bodyWidth, bodyTop, x + bodyWidth, bodyBottom),
        paint,
      );
      
      // Draw wicks
      final wickTop = size.height * (1 - (candle.high - minPrice) / paddedRange);
      final wickBottom = size.height * (1 - (candle.low - minPrice) / paddedRange);
      
      paint.strokeWidth = math.max(1.0, zoomScale);
      canvas.drawLine(Offset(x, wickTop), Offset(x, bodyTop), paint);
      canvas.drawLine(Offset(x, bodyBottom), Offset(x, wickBottom), paint);
    }
    
    // Draw order history dots
    for (var dot in orderHistoryDots) {
      final dotY = size.height * (1 - (dot.price - minPrice) / paddedRange);
      
      // Find the approximate X position based on timestamp
      final dotX = size.width * 0.8; // Place dots towards the right side
      
      // Draw outer circle (glow effect)
      final glowPaint = Paint()
        ..color = (dot.won ? Colors.green : Colors.red).withValues(alpha: 0.3)
        ..style = PaintingStyle.fill;
      canvas.drawCircle(Offset(dotX, dotY), 8, glowPaint);
      
      // Draw main dot
      final dotPaint = Paint()
        ..color = dot.won ? Colors.green : Colors.red
        ..style = PaintingStyle.fill;
      canvas.drawCircle(Offset(dotX, dotY), 4, dotPaint);
      
      // Draw inner dot for win
      if (dot.won) {
        final innerPaint = Paint()
          ..color = Colors.white
          ..style = PaintingStyle.fill;
        canvas.drawCircle(Offset(dotX, dotY), 2, innerPaint);
      }
    }
    
    // Draw trade entry points and win/lose areas
    for (final trade in activeTrades) {
      final entryY = size.height * (1 - (trade.entryPrice - minPrice) / paddedRange);
      
      // Draw entry price line
      paint
        ..color = trade.type == 'up' ? const Color(0xFF10B981) : const Color(0xFFEF4444)
        ..strokeWidth = 2.0
        ..style = PaintingStyle.stroke;
      
      // Dashed line for entry price
      _drawDashedLine(canvas, Offset(0, entryY), Offset(size.width, entryY), paint);
      
      // Draw entry point dot
      paint.style = PaintingStyle.fill;
      canvas.drawCircle(Offset(size.width * 0.95, entryY), 6, paint);
      
      // Draw win/lose area fade
      if (trade.type == 'up') {
        // Green fade above entry price (win area)
        final winGradient = Paint()
          ..shader = LinearGradient(
            begin: Alignment.topCenter,
            end: Alignment.bottomCenter,
            colors: [
              const Color(0xFF10B981).withAlpha((0.3 * 255).round()),
              const Color(0xFF10B981).withAlpha((0.1 * 255).round()),
            ],
          ).createShader(Rect.fromLTRB(0, 0, size.width, entryY));
        canvas.drawRect(Rect.fromLTRB(0, 0, size.width, entryY), winGradient);
        
        // Red fade below entry price (lose area)
        final loseGradient = Paint()
          ..shader = LinearGradient(
            begin: Alignment.topCenter,
            end: Alignment.bottomCenter,
            colors: [
              const Color(0xFFEF4444).withAlpha((0.1 * 255).round()),
              const Color(0xFFEF4444).withAlpha((0.3 * 255).round()),
            ],
          ).createShader(Rect.fromLTRB(0, entryY, size.width, size.height));
        canvas.drawRect(Rect.fromLTRB(0, entryY, size.width, size.height), loseGradient);
      } else {
        // Red fade above entry price (lose area)
        final loseGradient = Paint()
          ..shader = LinearGradient(
            begin: Alignment.topCenter,
            end: Alignment.bottomCenter,
            colors: [
              const Color(0xFFEF4444).withAlpha((0.3 * 255).round()),
              const Color(0xFFEF4444).withAlpha((0.1 * 255).round()),
            ],
          ).createShader(Rect.fromLTRB(0, 0, size.width, entryY));
        canvas.drawRect(Rect.fromLTRB(0, 0, size.width, entryY), loseGradient);
        
        // Green fade below entry price (win area)
        final winGradient = Paint()
          ..shader = LinearGradient(
            begin: Alignment.topCenter,
            end: Alignment.bottomCenter,
            colors: [
              const Color(0xFF10B981).withAlpha((0.1 * 255).round()),
              const Color(0xFF10B981).withAlpha((0.3 * 255).round()),
            ],
          ).createShader(Rect.fromLTRB(0, entryY, size.width, size.height));
        canvas.drawRect(Rect.fromLTRB(0, entryY, size.width, size.height), winGradient);
      }
    }
  }
  
  // Helper method to draw dashed lines
  void _drawDashedLine(Canvas canvas, Offset start, Offset end, Paint paint) {
    const dashWidth = 8.0;
    const dashSpace = 4.0;
    double distance = (end - start).distance;
    double currentDistance = 0.0;
    
    while (currentDistance < distance) {
      final currentStart = Offset.lerp(start, end, currentDistance / distance)!;
      currentDistance += dashWidth;
      final currentEnd = Offset.lerp(start, end, math.min(currentDistance, distance) / distance)!;
      canvas.drawLine(currentStart, currentEnd, paint);
      currentDistance += dashSpace;
    }
  }

  @override
  bool shouldRepaint(covariant CustomPainter oldDelegate) => true;
}
