// Market Models
class CandlestickData {
  final DateTime timestamp;
  final double open;
  final double high;
  final double low;
  final double close;

  CandlestickData({
    required this.timestamp,
    required this.open,
    required this.high,
    required this.low,
    required this.close,
  });
}

class TradePosition {
  final String id;
  final String type; // 'up' or 'down'
  final double entryPrice;
  final DateTime startTime;
  final DateTime endTime;
  final double amount;
  String status; // 'active', 'won', 'lost'
  double? exitPrice;

  TradePosition({
    required this.id,
    required this.type,
    required this.entryPrice,
    required this.startTime,
    required this.endTime,
    required this.amount,
    this.status = 'active',
    this.exitPrice,
  });

  bool get isWon => status == 'won';
  bool get isLost => status == 'lost';
  bool get isActive => status == 'active';
}

class TradingSignal {
  final String pair;
  final String direction; // 'UP' or 'DOWN'
  final String accuracy;
  final DateTime expiry;
  final int duration; // seconds
  final Color color;

  TradingSignal({
    required this.pair,
    required this.direction,
    required this.accuracy,
    required this.expiry,
    required this.duration,
    required this.color,
  });
}

class OrderHistoryDot {
  final double price;
  final DateTime timestamp;
  final String type; // 'up' or 'down'
  final bool won;
  final double amount;

  OrderHistoryDot({
    required this.price,
    required this.timestamp,
    required this.type,
    required this.won,
    required this.amount,
  });
}

